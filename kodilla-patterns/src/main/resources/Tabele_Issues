CREATE TABLE ISSUESLIST (
    ID SERIAL PRIMARY KEY,
    NAME VARCHAR(100)CHARSET UTF8 NOT NULL
);


CREATE TABLE ISSUES (
    ID SERIAL PRIMARY KEY,
    ISSUESLIST_ID BIGINT UNSIGNED NOT NULL,
    SUMMARY VARCHAR(50)CHARSET UTF8,
    DESCRIPTION VARCHAR(100)CHARSET UTF8,
    USER_ID_ASSIGNEDTO BIGINT UNSIGNED NOT NULL,
    FOREIGN KEY (ISSUESLIST_ID)
        REFERENCES ISSUESLIST (ID),
    FOREIGN KEY (USER_ID_ASSIGNEDTO)
        REFERENCES USERS (ID)
);


